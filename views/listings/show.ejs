<% layout("/layouts/boilerplate") %>

<div class="container-fluid py-4">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8 mb-4">
            <!-- Image Gallery -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="position-relative">
                    <img src="<%= listing.image.url %>" 
                         class="card-img-top w-100" 
                         alt="<%= listing.title %>"
                         style="height: 400px; object-fit: cover;">
                    
                    <!-- Back button -->
                    <a href="/listings" class="position-absolute top-0 start-0 m-3 btn btn-light btn-sm rounded-circle">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    
                    <!-- Share button -->
                    <button class="position-absolute top-0 end-0 m-3 btn btn-light btn-sm rounded-circle">
                        <i class="fas fa-share"></i>
                    </button>
                </div>
            </div>
            
            <!-- Listing Details -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-3">
                        <div class="mb-3 mb-md-0">
                            <h1 class="h2 fw-bold mb-2"><%= listing.title %></h1>
                            <p class="text-muted mb-0">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                <%= listing.location %>, <%= listing.country %>
                            </p>
                        </div>
                        <div class="text-end">
                            <h3 class="text-primary fw-bold mb-0">$<%= listing.price %></h3>
                            <small class="text-muted">per night</small>
                        </div>
                    </div>
                    
                    <!-- Host info -->
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        <div>
                            <h6 class="mb-0">Hosted by <%= listing.owner.username %></h6>
                            <small class="text-muted">Superhost Â· 2 years hosting</small>
                        </div>
                    </div>
                    
                    <!-- Description -->
                    <div class="mb-4">
                        <h5 class="mb-3">About this place</h5>
                        <p class="text-muted lh-lg"><%= listing.description %></p>
                    </div>
                    
                    <!-- Amenities -->
                    <div class="mb-4">
                        <h5 class="mb-3">Amenities</h5>
                        <div class="row">
                            <div class="col-sm-6 mb-2">
                                <i class="fas fa-wifi me-2 text-primary"></i>Free WiFi
                            </div>
                            <div class="col-sm-6 mb-2">
                                <i class="fas fa-parking me-2 text-primary"></i>Free Parking
                            </div>
                            <div class="col-sm-6 mb-2">
                                <i class="fas fa-swimmer me-2 text-primary"></i>Swimming Pool
                            </div>
                            <div class="col-sm-6 mb-2">
                                <i class="fas fa-utensils me-2 text-primary"></i>Kitchen
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action buttons -->
                    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
                    <div class="d-flex flex-column flex-sm-row gap-2 mt-4">
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning flex-fill">
                            <i class="fas fa-edit me-1"></i>Edit Listing
                        </a>
                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="flex-fill">
                            <button class="btn btn-danger w-100" type="submit" onclick="return confirm('Are you sure?')">
                                <i class="fas fa-trash me-1"></i>Delete Listing
                            </button>
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Booking Card -->
            <div class="card border-0 shadow-sm sticky-top mb-4" style="top: 20px;">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h4 class="text-primary fw-bold mb-0">$<%= listing.price %></h4>
                        <small class="text-muted">per night</small>
                    </div>
                    
                    <form action="#" method="POST">
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label small">Check-in</label>
                                <input type="date" class="form-control" name="checkin" required>
                            </div>
                            <div class="col-6">
                                <label class="form-label small">Check-out</label>
                                <input type="date" class="form-control" name="checkout" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label small">Guests</label>
                            <select class="form-select" name="guests">
                                <option value="1">1 Guest</option>
                                <option value="2">2 Guests</option>
                                <option value="3">3 Guests</option>
                                <option value="4">4 Guests</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-calendar-check me-1"></i>Reserve Now
                        </button>
                        
                        <div class="text-center">
                            <small class="text-muted">You won't be charged yet</small>
                        </div>
                    </form>
                    
                    <!-- Price breakdown -->
                    <hr>
                    <div class="d-flex justify-content-between mb-2">
                        <span>$<%= listing.price %> x 1 night</span>
                        <span>$<%= listing.price %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Service fee</span>
                        <span>$<%= Math.round(listing.price * 0.1) %></span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Total</span>
                        <span>$<%= listing.price + Math.round(listing.price * 0.1) %></span>
                    </div>
                </div>
            </div>
            
            <!-- Map placeholder -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <div class="text-center text-muted">
                            <i class="fas fa-map-marked-alt fa-3x mb-2"></i>
                            <p>Interactive Map</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Reviews Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-4">
                        <div>
                            <h4 class="mb-2">Reviews</h4>
                            <div class="d-flex align-items-center">
                                <div class="text-warning me-2">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                </div>
                                <span class="fw-bold me-2">4.8</span>
                                <span class="text-muted">(<%= listing.reviews.length %> reviews)</span>
                            </div>
                        </div>
                        
                        <% if (currUser) { %>
                        <button class="btn btn-outline-primary mt-3 mt-md-0" data-bs-toggle="modal" data-bs-target="#reviewModal">
                            <i class="fas fa-plus me-1"></i>Add Review
                        </button>
                        <% } %>
                    </div>
                    
                    <!-- Reviews List -->
                    <div class="row">
                        <% if (listing.reviews.length > 0) { %>
                            <% for (let review of listing.reviews) { %>
                            <div class="col-md-6 mb-4">
                                <div class="border-start border-3 border-primary ps-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                            <i class="fas fa-user text-white small"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0"><%= review.author.username %></h6>
                                            <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString() %></small>
                                        </div>
                                        
                                        <% if (currUser && review.author._id.equals(currUser._id)) { %>
                                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="ms-auto">
                                            <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Delete this review?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                        <% } %>
                                    </div>
                                    
                                    <div class="text-warning mb-2">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <i class="<%= i <= review.rating ? 'fas' : 'far' %> fa-star"></i>
                                        <% } %>
                                    </div>
                                    
                                    <p class="text-muted mb-0"><%= review.comment %></p>
                                </div>
                            </div>
                            <% } %>
                        <% } else { %>
                        <div class="col-12 text-center py-4">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No reviews yet</h5>
                            <p class="text-muted">Be the first to leave a review!</p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<% if (currUser) { %>
<div class="modal fade" id="reviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <div class="rating-input">
                            <% for (let i = 1; i <= 5; i++) { %>
                            <input type="radio" name="review[rating]" value="<%= i %>" id="star<%= i %>" required>
                            <label for="star<%= i %>" class="text-warning fs-4">
                                <i class="fas fa-star"></i>
                            </label>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea class="form-control" name="review[comment]" id="comment" rows="4" required></textarea>
                        <div class="invalid-feedback">
                            Please provide a comment.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% } %>